oc create -f - <<EOF
apiVersion: local.storage.openshift.io/v1
kind: LocalVolume
metadata:
  name: block
  namespace: local-storage
spec:
  storageClassDevices:
    - devicePaths:
        - /dev/vda4
      storageClassName: localblock
      volumeMode: Block
---
apiVersion: local.storage.openshift.io/v1
kind: LocalVolume
metadata:
  name: file
  namespace: local-storage
spec:
  storageClassDevices:
    - devicePaths:
        - /dev/vda
      fsType: ext4
      storageClassName: localfile
      volumeMode: Filesystem
EOF
